# ========================================
# MS DECOR - VARIÁVEIS DE AMBIENTE
# ========================================

# Configurações da Aplicação
NEXT_PUBLIC_APP_NAME="MS Decor"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_DESCRIPTION="Sistema ERP completo para decoração"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Configurações de Ambiente
NODE_ENV="development"
NEXT_TELEMETRY_DISABLED="1"

# ========================================
# AUTENTICAÇÃO E SEGURANÇA
# ========================================

# JWT Secret (gere uma chave segura)
JWT_SECRET="sua-chave-jwt-super-secreta-aqui"
NEXTAUTH_SECRET="sua-chave-nextauth-super-secreta"
NEXTAUTH_URL="http://localhost:3000"

# Configurações de Sessão
SESSION_TIMEOUT="3600"
REFRESH_TOKEN_EXPIRY="604800"

# ========================================
# BANCO DE DADOS
# ========================================

# PostgreSQL (para futuras integrações)
DATABASE_URL="postgresql://usuario:senha@localhost:5432/msdecor"
DATABASE_POOL_SIZE="10"

# MongoDB (alternativa)
MONGODB_URI="mongodb://localhost:27017/msdecor"

# Redis (cache e sessões)
REDIS_URL="redis://localhost:6379"

# ========================================
# EMAIL E NOTIFICAÇÕES
# ========================================

# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="seu-email@gmail.com"
SMTP_PASS="sua-senha-de-app"
SMTP_FROM="noreply@msdecor.com.br"

# SendGrid (alternativa)
SENDGRID_API_KEY="sua-chave-sendgrid"

# WhatsApp Business API
WHATSAPP_TOKEN="seu-token-whatsapp"
WHATSAPP_PHONE_ID="seu-phone-id"
WHATSAPP_VERIFY_TOKEN="seu-verify-token"

# ========================================
# PAGAMENTOS
# ========================================

# Stripe
STRIPE_PUBLIC_KEY="pk_test_sua-chave-publica"
STRIPE_SECRET_KEY="sk_test_sua-chave-secreta"
STRIPE_WEBHOOK_SECRET="whsec_sua-chave-webhook"

# PagSeguro
PAGSEGURO_EMAIL="seu-email@pagseguro.com"
PAGSEGURO_TOKEN="seu-token-pagseguro"
PAGSEGURO_SANDBOX="true"

# Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN="seu-access-token"
MERCADO_PAGO_PUBLIC_KEY="sua-chave-publica"

# ========================================
# STORAGE E CDN
# ========================================

# AWS S3
AWS_ACCESS_KEY_ID="sua-access-key"
AWS_SECRET_ACCESS_KEY="sua-secret-key"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="ms-decor-uploads"

# Cloudinary
CLOUDINARY_CLOUD_NAME="seu-cloud-name"
CLOUDINARY_API_KEY="sua-api-key"
CLOUDINARY_API_SECRET="seu-api-secret"

# ========================================
# ANALYTICS E MONITORAMENTO
# ========================================

# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Google Tag Manager
NEXT_PUBLIC_GTM_ID="GTM-XXXXXXX"

# Hotjar
NEXT_PUBLIC_HOTJAR_ID="1234567"

# Sentry (Error Tracking)
SENTRY_DSN="https://sua-dsn@sentry.io/projeto"
SENTRY_ORG="sua-organizacao"
SENTRY_PROJECT="ms-decor"

# ========================================
# INTEGRAÇÕES EXTERNAS
# ========================================

# OpenAI (para chatbot)
OPENAI_API_KEY="sk-sua-chave-openai"

# Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="sua-chave-google-maps"

# Correios API
CORREIOS_USER="seu-usuario-correios"
CORREIOS_PASSWORD="sua-senha-correios"

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ========================================

# Debug
DEBUG="false"
LOG_LEVEL="info"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Cache
CACHE_TTL="3600"
CACHE_MAX_SIZE="100"

# ========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ========================================

# SSL
SSL_CERT_PATH="/path/to/cert.pem"
SSL_KEY_PATH="/path/to/key.pem"

# CDN
CDN_URL="https://cdn.msdecor.com.br"

# Backup
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"
